extends layout

block content
    h1=title
    ul.errors
        if errors
            each error, i in errors
                li.alert.alert-danger #{error.msg}
    form(method='post', action='/posts/add', enctype='multipart/form-data')
        .form-group
            label Title
            input.form-control(name='title', type='text')
        .form-group
            label Category
            select.form-control(name='category')
                option(value="Technology") Technology
                option(value="Fashion") Fashion 
        .form-group
            label Body
            textarea.form-control(name='body', id='body')
        .form-group
            label Main Image
            input.form-control(name='mainimage', type='file')
        .form-group
            label Author
            select.form-control(name='Author')
                option(value="Tanmay Mathur") Tanmay Mathur
                option(value="Geetanshu Mathur") Geetanshu Mathur
        input.btn.btn-default(name='submit', type='submit', value='submit')
        script(src='/ckeditor/ckeditor.js')
        script
            | CKEDITOR.replace('body');